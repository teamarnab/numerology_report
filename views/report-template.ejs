<html lang="en">
  <%- include("partials/head") %>
  <body>
    <div class="report-container">
      <h1><%= name %> Numerology Report</h1>

      <div class="details">
        <p><strong>Name:</strong> <%= name %></p>
        <p>
          <strong>Date of Birth:</strong> <%= date %>-<%= month %>-<%= year %>
        </p>
        <p><strong>Gender:</strong> <%= gender %></p>
        <p><strong>Place of Birth:</strong> <%= pob %></p>
      </div>

      <h2>Your Numerology Report</h2>
      <p><%= generated_response %></p>

      <div class="footer">
        <p><i>Generated by Numerology Report System</i></p>
      </div>
    </div>
  </body>
</html>
